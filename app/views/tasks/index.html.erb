<h1>Listing tasks</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Completed?</th>
    <th>Location</th>
  </tr>

<% @tasks.sort_by(&:name).each do |task| %>
  <tr>
	<td><%= link_to h(task.name), task %> (<%= link_to 'e', edit_task_path(task) %>|<%= link_to 'x', task, :confirm => 'Assured of your delete request?', :method => :delete %>)</td>
    <td><%=h link_to task.location.name, task.location, :controller => :location unless !task.location_id %></td>
    <td><%=h task.completed ? "Yes" : "No" %></td>

  </tr>
<% end %>
</table>

<br />

<%= link_to 'New task', new_task_path %>