<% content_tag_for :li, task do %>
	<%= link_to h(task.name), task_path(task) %> 
	<% if !task.completed? -%>
		(<%= link_to "complete", task, :method => :put, task[:completed] => :true %>) <!-- Help me out here... -->
	<% else %>
		(<%= link_to "re-open", task, :method => :put %>)
	<% end -%>
	<%= link_to "(x)", task, :controller => "tasks", :action => :destroy, :method => :delete, :confirm => "Delete for sure?" %>
	
<% end -%>