<h1>Editing task</h1>

<% form_for(@task) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :completed %><br />
	<%= select :task, :completed, [["Yes",true],["No",false]] %>

  </p>
  <p>
    <%= f.label :location_id %><br />
   	<%= f.text_field :location_id %> <!-- # TODO: Make this less stupid in the view.; --> 
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end -%>

<%= link_to 'Show', @task %> |
<%= link_to 'Back', tasks_path %>